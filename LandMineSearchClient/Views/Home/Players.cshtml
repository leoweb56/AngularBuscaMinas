<div ng-controller="playersController as vm">
    <h1 class="col-lg-12">Players</h1>
    <h2 class="col-lg-12">Hola {{vm.currentPlayer.PlayerName}}</h2>
    <div class="col-xs-6">
        <ul class="list-group">
            <li ng-repeat="player in vm.players" class="list-group-item" ng-class="{'active': player.IsAvailable}" ng-click="vm.gameStart(player);" ng-if="player.PlayerId != 1">
                {{player.PlayerName}}
            </li>
        </ul>
    </div>

</div>

